#! /usr/bin/env bash

set -Eeuo pipefail

FILE="$(basename $0)"
DIR="${0%$FILE}"

cd "$DIR.."
DIR="${DIR%/*}"
DIR="${DIR##*/}"

mkdir -p _build/libs

has_failed=0

set +e
echo "Running main benchmarks"
cargo bench --verbose --all >& _build/main.bench_result
if [ "$?" -ne 0 ]; then
    echo "FAIL: main (bench)"
    cat ../../_build/main.bench_result
    has_failed=1
else
    echo "PASS: main (bench)"
fi
set -e

for library in libs/*; do
    cd "$library"
    set +e
    echo "Running $library benchmarks"
    cargo bench >& ../../_build/"$library.bench_result"
    if [ "$?" -ne 0 ]; then
        echo "FAIL: $library (bench)"
        cat ../../_build/"$library.bench_result"
        has_failed=1
    else
        echo "PASS: $library (bench)"
    fi
    set -e
    cd ../..
done

exit "$has_failed"
